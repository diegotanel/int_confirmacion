#encoding: utf-8
<% provide(:title, 'Datos tecnicos del espectaculo') %>
<h1>Datos tecnicos del espectáculo</h1>

</br>
<p>
  <b>Duración montaje:</b>
  <%= @datos_tec.duracion_montaje %>
</p>

<p>
  <b>Duración desmontaje:</b>
  <%= @datos_tec.duracion_desmontaje %>
</p>

<p>
  <b>Tipo de espacio:</b>
  <%= @datos_tec.esps_esps.map { |e| e.detalle }.join(", ") %>
</p>

<p>
  <b>Descripción espacio:</b>
  <%= @datos_tec.descripcion_espacio %>
</p>

<p>
  <b>Ancho:</b>
  <%= @datos_tec.ancho %>
</p>

<p>
  <b>Alto:</b>
  <%= @datos_tec.alto %>
</p>

<p>
  <b>Profundidad:</b>
  <%= @datos_tec.profundidad %>
</p>

<p>
  <b>Listado de artefactos lumínicos:</b>
  <%= @datos_tec.listado_artefactos_luminicos %>
</p>

<p>
  <b>Listado sonido:</b>
  <%= @datos_tec.listado_sonido %>
</p>

<p>
  <b>Otros equipamientos:</b>
  <%= @datos_tec.otros_equipamientos %>
</p>

<p>
  <b>Peso total:</b>
  <%= @datos_tec.peso_total %>
</p>

<p>
  <b>Volumen total:</b>
  <%= @datos_tec.volumen_total %>
</p>

<p>
  <b>Otras necesidades:</b>
  <%= @datos_tec.otras_necesidades %>
</p></br>

</br>
<h4>Ir a:</h4>

<% if (@formulario.principal) %>
    <%= link_to t("datos principales"), edit_formulario_principal_path(@formulario, @formulario.principal) %></br>
<% else %>
    <%= link_to t("Alta datos principales"), new_formulario_principal_path(@formulario) %></br>
<% end %>

<% if (@formulario.datos_esp) %>
      <%= link_to t("datos del espectáculo"), edit_formulario_datos_esp_path(@formulario, @formulario.datos_esp) %></br>
<% else %>
      <%= link_to t("Alta datos del espectáculo"), new_formulario_datos_esp_path(@formulario) %></br>
<% end %>

<%= link_to t("Alta datos de elenco en gira"), formulario_elencos_en_gira_path(@formulario) %></br>

<% if (@formulario.datos_grupo) %>
  <%= link_to t("datos del grupo"), edit_formulario_datos_grupo_path(@formulario, @formulario.datos_grupo) %></br>
<% else %>
  <% if (@formulario.principal) %>
    <% if (@formulario.principal.grupo.codigo == "a" ) %>
      <%= link_to t("Alta datos del grupo"), new_formulario_datos_grupo_path(@formulario) %></br>
    <% end %>
  <% end %>
<% end %>

<% if (@formulario.responsable) %>
  <%= link_to t("datos del responsable"), edit_formulario_responsable_path(@formulario, @formulario.responsable) %></br>
<% else %>
  <%= link_to t("Alta datos del responsable"), new_formulario_responsable_path(@formulario) %></br>
<% end %>
<%= link_to t('scaffoldi18n.back'), edit_formulario_path(@formulario) %>
