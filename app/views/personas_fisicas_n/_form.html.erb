#encoding: utf-8
  <%= form_for([@formulario, @persona_fisica_n]) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>

    <p>Los campos marcados con * son obligatorios</p>

    <div class="field">
    <%= f.label :nombre, "Nombre *" %>
    <%= f.text_field :nombre %>
    </div>

    <div class="field">
    <%= f.label :apellido, "Apellido *" %>
    <%= f.text_field :apellido %>
    </div>

    <div class="field">
    <%= f.label :cuil_cuit, "Número de cuil / cuit * (sin guiones ni puntos)" %>
    <%= f.text_field :cuil_cuit %>
    </div>

    <div class="field">
    <%= f.label :fecha_de_nacimiento, "Fecha de nacimiento *" %>
    <%= f.text_field :fecha_de_nacimiento, :value => (f.object.fecha_de_nacimiento ? I18n.l(f.object.fecha_de_nacimiento) : '') %>
    </div>

    <div class="field">
    <%= f.label :calle, "Calle *" %>
    <%= f.text_field :calle %>
    </div>

    <div class="field">
    <%= f.label :altura_calle, "Numero de calle *" %>
    <%= f.text_field :altura_calle %>
    </div>

    <div class="field">
    <%= f.label :piso, "Piso" %>
    <%= f.text_field :piso %>
    </div>

    <div class="field">
    <%= f.label :depto, "Depto" %>
    <%= f.text_field :depto %>
    </div>

    <div class="field">
        <br/><%= f.label :provincia, "Provincia" %>
        <%= collection_select(:ideec, "provincia_id", @provincias, "id", "detalle", :include_blank => "Seleccione una provincia...", :selected => selected(@persona_fisica_n.localidad)) %>
    </div>

    <div class="field">
    <%= f.label :localidad %><br />
    <%= f.grouped_collection_select("localidad_id", @provincias, "localidades", "detalle", "id", "detalle", :include_blank => "Seleccione una localidad...") %>
    </div>

    <div class="field">
    <%= f.label :codigo_postal, "Código Postal *" %>
    <%= f.text_field :codigo_postal %>
    </div>

    <div class="field">
    <%= f.label :tel_particular, "Teléfono Particular (sin guiones ni puntos)" %>
    <%= f.text_field :tel_particular %>
    </div>

    <div class="field">
    <%= f.label :tel_celular, "Teléfono Celular * (sin guiones ni puntos)" %>
    <%= f.text_field :tel_celular %>
    </div>

    <div class="field">
    <%= f.label :email, "Email *" %>
    <%= f.text_field :email %>
    </div>

  <div class="actions">
    <%= f.submit "Guardar Datos", class: "btn btn-large btn-primary" %>
  </div>
<% end %>