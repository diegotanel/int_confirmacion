#encoding: utf-8
<% provide(:title, 'Datos del artista') %>
<h1>Datos del artista</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for([@formulario, @ficha]) do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>
      <%= f.label :nombre_artista, "Nombre del artista" %>
      <%= f.text_field :nombre_artista %>

      <%= f.label :apellido_artista, "Apellido del artista" %>
      <%= f.text_field :apellido_artista %>

      <%= f.label :rol_artista, "Rol del artista" %>
      <%= f.text_field :rol_artista %>

      <%= f.submit "Cargar Datos", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>