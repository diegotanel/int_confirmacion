#encoding: utf-8
<% provide(:title, 'Integrantes comision directiva') %>
<h2>Integrantes comision directiva</h2><p>(* 5 Integrantes como máximo)</p>


<div id="integrantes">
<table class="table table-striped">
  <tr>

    <th>Nombre</th>
    <th>Apellido</th>
    <th>Cargo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <%= content_tag_for(:tr, @integrantes_comision) do |integrante| %>

    <td><%= integrante.nombre %></td>
    <td><%= integrante.apellido %></td>
    <td><%= integrante.cargo %></td>

    <td><%= link_to "Ver", formulario_integrante_comision_directiva_path(@formulario, integrante) %></td>

    <td><%= link_to "Modificar", edit_formulario_integrante_comision_directiva_path(@formulario, integrante) %></td>

    <td><%= link_to t("scaffoldi18n.destroy"), formulario_integrante_comision_directiva_path(@formulario, integrante), :data => {confirm: t("scaffoldi18n.are_you_sure?")}, method: :delete %></td>
    
  <% end %>
</table>
<%= link_to "Nuevo integrante", new_formulario_integrante_comision_directiva_path(@formulario), class: "btn btn-medium btn-primary" %>

<br />
<br />

<% if (@formulario.principal) %>
    <%= link_to t("Editar datos principales"), edit_formulario_principal_path(@formulario, @formulario.principal) %></br>
<% else %>
    <%= link_to t("Alta datos principales"), new_formulario_principal_path(@formulario) %></br>
<% end %>

<% if (@formulario.datos_esp) %>
      <%= link_to t("datos del espectáculo"), edit_formulario_datos_esp_path(@formulario, @formulario.datos_esp) %></br>
<% else %>
      <%= link_to t("Alta datos del espectáculo"), new_formulario_datos_esp_path(@formulario) %></br>
<% end %>

<% if (@formulario.datos_tec) %>
  <%= link_to t("Editar datos técnicos del espectáculo"), edit_formulario_datos_tec_path(@formulario, @formulario.datos_tec) %></br>
<% else %>
  <%= link_to t("Alta datos técnicos del espectáculo"), new_formulario_datos_tec_path(@formulario) %></br>
<% end %>

<%= link_to t("Alta datos de elenco en gira"), formulario_elencos_en_gira_path(@formulario) %></br>

<% if (@formulario.datos_grupo) %>
  <%= link_to t("Editar datos del grupo"), edit_formulario_datos_grupo_path(@formulario, @formulario.datos_grupo) %></br>
<% else %>
  <% if (@formulario.principal) %>
    <% if (@formulario.principal.grupo.codigo == "a" ) %>
      <%= link_to t("Alta datos del grupo"), new_formulario_datos_grupo_path(@formulario) %></br>
    <% end %>
  <% end %>
<% end %>

<%= link_to t('scaffoldi18n.back'), edit_formulario_path(@formulario) %>

</div>