#encoding: utf-8
<% provide(:title, 'Datos del responsable') %>
<h1>Datos del responsable</h1>
<% if @formulario.responsable %>
  <% if @formulario.responsable.persona_fisica_e %>
    <h3>Datos de la persona física existente</h3>
    </br>
    <p>
      <b>Nombre:</b>
      <%= @integrante.nombre %>
    </p>

    <p>
      <b>Apellido:</b>
      <%= @persona_fisica_e.apellido if @persona_fisica_e.apellido %>
    </p>

    <p>
      <b>CUIL / CUIT:</b>
      <%= @persona_fisica_e.cuil_cuit if @persona_fisica_e.cuil_cuit %>
    </p>

    <p>
      <b>Fecha de nacimiento:</b>
      <%= @persona_fisica_e.fecha_de_nacimiento if @persona_fisica_e.fecha_de_nacimiento %>
    </p>

    <p>
      <b>Calle:</b>
      <%= @persona_fisica_e.calle if @persona_fisica_e.calle %>
    </p>

    <p>
      <b>Numero de calle:</b>
      <%= @persona_fisica_e.altura_calle if @persona_fisica_e.altura_calle %>
    </p>

    <p>
      <b>Piso:</b>
      <%= @persona_fisica_e.piso if  @persona_fisica_e.piso  %>
    </p>

    <p>
      <b>Departamento:</b>
      <%= @persona_fisica_e.depto  if @persona_fisica_e.depto%>
    </p>

    <p>
      <b>Provincia:</b>
      <%= @persona_fisica_e.provincia.detalle %>
    </p>

    <p>
      <b>Localidad:</b>
      <%= @persona_fisica_e.localidad.detalle %>
    </p>

    <p>
      <b>Código postal:</b>
      <%= @persona_fisica_e.codigo_postal if @persona_fisica_e.codigo_postal %>
    </p>

    <p>
      <b>Teléfono particular:</b>
      <%= @persona_fisica_e.tel_particular if @persona_fisica_e.tel_particular%>
    </p>

    <p>
      <b>Teléfono celular:</b>
      <%= @persona_fisica_e.tel_celular if @persona_fisica_e.tel_celular %>
    </p>

    <p>
      <b>Email:</b>
      <%= @persona_fisica_e.email if @persona_fisica_e.email %>
    </p>
  <% end %>
<% end %>
</br>

<%= link_to t('Volver a campos de datos'), edit_formulario_path(@formulario) %>