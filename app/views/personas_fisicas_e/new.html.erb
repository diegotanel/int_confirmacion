#encoding: utf-8
<% provide(:title, 'Busqueda de persona') %>
<h2>Buscar persona fisica</h2>

<div class="row">
  <div class="span6 offset3">
		<%= form_tag({controller: 'personas_fisicas_e', action: 'buscar_integrante_por_cuil_cuit'}, method: 'post')  do %>
			<p>Ingrese el numero de Cuil/Cuit de la persona que quiere buscar</p>
			<%= text_field_tag :numero_cuil_cuit %>
			</br>
			<%= submit_tag "Iniciar busqueda", class: "btn btn-large btn-medium" %>
		<% end %>
  </div>
</div>
